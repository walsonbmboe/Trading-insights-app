{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    
    // --- FIXES START HERE ---
    "esModuleInterop": true,              // <-- Added: Allows default imports from non-ESM (CommonJS) files.
    "allowSyntheticDefaultImports": true, // <-- Added: Works with esModuleInterop for cleaner import syntax.
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    
    // <-- REMOVED: "noUncheckedSideEffectImports" (Often conflicts with module imports)
    "noUncheckedIndexedAccess": true // Optional: Add for extra safety in strict mode
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.d.ts"
  ]
}